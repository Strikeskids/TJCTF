include mixins

+htmlbase('Problem List')
	- for (var problemid in problems)
		- var problem = problems[problemid]
		section.problem
			div.problem-name: a(href=('/problems/' + problem.id))= problem.name
			div.problem-author= problem.author
			div.problem-solved
				if interactions && interactions[problem.id].attempts > 0
					img(src='/images/' + (interactions[problem.id].solved ? 'correct' : 'incorrect') + '.png')
			div.problem-points= problem.points + ' points'